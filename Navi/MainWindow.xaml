<Window x:Class="Navi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Navi"
        mc:Ignorable="d"
        Title="Navi"
        Background="#162029"
        Height="450" Width="800"
        MinHeight="450" MinWidth="400">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#1f2029" BorderBrush="White" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListView Background="#1f2029" x:Name="libraryListView" BorderThickness="0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Viewbox>
                                <Label x:Name="ListViewLabel" Content="{Binding}" Margin="10,0" Foreground="White" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Viewbox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border Grid.Row="1" Background="#1D2F40" BorderBrush="White" BorderThickness="1">
                    <StackPanel>

                        <Label Content="【MV】 鹿乃 「Stella-rium」 【OFFICIAL" Width="200" HorizontalContentAlignment="Center" Foreground="White"/>

                        <Slider Margin="10,5,10,0"/>
                        <Label Content="13:43 / 26:73" FontSize="14" HorizontalContentAlignment="Center" Foreground="White"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <Border x:Name="loopButton" Width="25" Height="25" Margin="5" Background="Gray" CornerRadius="5" MouseLeftButtonUp="LoopButton_MouseLeftButtonUp">
                                <Image Source="Resources/loop.png" Width="20" Height="20"/>
                            </Border>

                            <Border Width="30" Height="30" Margin="5" Background="AliceBlue" CornerRadius="5">
                                <Image Source="Resources/skipb.png"/>
                            </Border>

                            <Border x:Name="playButton" Width="30" Height="30" Margin="5" Background="AliceBlue" CornerRadius="5" MouseLeftButtonUp="playButton_MouseLeftButtonUp" >
                                <Image x:Name="playIcon" Source="Resources/play.png"/>
                            </Border>

                            <Border Width="30" Height="30" Margin="5" Background="AliceBlue" CornerRadius="5">
                                <Image Source="Resources/skipf.png"/>
                            </Border>

                            <Border x:Name="volumeButton" Width="25" Height="25" Margin="5" Background="Gray" CornerRadius="5" MouseLeftButtonUp="VolumeButton_MouseLeftButtonUp">
                                <Image x:Name="volumeIcon" Source="Resources/volume-high.png" Width="20" Height="20"/>
                            </Border>

                        </StackPanel>

                        <StackPanel x:Name="volumePanel" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="Volume:" Foreground="White"/>
                            <Slider x:Name="volumeSlider" Value="0.05" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" Width="120" Minimum="0" Maximum="0.1" ValueChanged="VolumeSlider_ValueChanged"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Border>
            </Grid>
        </Border>


            <ListView x:Name="musicListView" Grid.Column="1" Background="Transparent" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" VerticalAlignment="Top">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" Width="480" DisplayMemberBinding="{Binding Path=Title}" />
                        <GridViewColumn Header="Duration" Width="60" DisplayMemberBinding="{Binding Path=Duration}" />
                    </GridView>
                </ListView.View>
            </ListView>


            <DockPanel HorizontalAlignment="Center" Visibility="Collapsed">
                <TextBox x:Name="txtBox" Width="200" Height="40"/>
                <Button x:Name="buttonSearch" Content="Download" Width="200" Height="40" Click="ButtonSearch_Click"/>
                <Label x:Name="labelResult" FontSize="12" Foreground="White"/>
            </DockPanel>
        <Image x:Name="imgThumbnail" Visibility="Collapsed"/>

    </Grid>
</Window>
