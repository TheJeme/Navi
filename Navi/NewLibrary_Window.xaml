<Window x:Class="Navi.NewLibrary_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Navi"
        mc:Ignorable="d"
        Background="#162029"
        Title="Create new Library"
        Height="170" Width="360"
        ResizeMode="NoResize"
        Topmost="True"
        x:Name="window">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10">
                <Label Content="Enter a name:" Foreground="White" FontSize="28" Margin="3,0"/>
                <Border Background="White" CornerRadius="10" Height="35">
                    <TextBox x:Name="LibNameLabel" Width="140" Height="20" Margin="2" BorderThickness="0" VerticalContentAlignment="Center" FontSize="14" MaxLength="30"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="okButton" Content="Ok" Width="100" Height="40" Margin="15" Click="OkButton_Click"/>
                <Button x:Name="closeButton" Width="100" Content="Cancel" Height="40" Margin="15" Click="closeButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
